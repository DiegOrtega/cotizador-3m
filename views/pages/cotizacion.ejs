<!DOCTYPE html>
<html>
<head>
	<META http-equiv="Pragma" content="no-cache"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<% include ../partials/header.ejs %>
	
</head>
	
<body>
	<div class="container" style="margin:0 auto;">
		<div class="row">
			
			<div class="hidden-lg-up col-sm-12 col-xs-12" align="center">
				<h3>Cotización de Material</h3>
			</div>
			
			<div class="col" align="center">
				<img src="/img/logoleo.png" class="img-fluid" style="max-width: 100%; height: auto;" alt="Artículos Innovadores Leo Logo" title="Artículos Innovadores Leo">
			</div>
			<div class="col hidden-md-down" align="center">
				<h1>Cotización de Material</h1>
			</div>
			<div class="col" align="center">
				<img src="/img/3M.png" class="img-fluid" alt="3M Logo" title="Artículos Innovadores Leo" style="max-width: 100%; max-height: 124px;">
			</div>
		</div>

	</div>
	
	<div class="container">
		<div class="row">
				<h3 class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align: left; font-size:75%;">Tipo de cambio: $<%= tipo_cambio %> MXN</h3>
				<h3 class="col-lg-5 col-md-6 col-sm-6 col-xs-6" style="text-align: right; font-size:75%;"><%= fecha %></h3>
		</div>
	</div>
	
    <div class="container centro" style="margin:0 auto;">
        <div class="row">
			<div style="border: 1px solid gray; border-radius: 10px; margin:0 auto;" class="col-lg-12">
				<table class="table table-striped" style="margin:0 auto;">
					
					<thead class="">
						<tr>
							<th colspan="4" class="celda-centro" ><h2>Cliente</h2></th>
						</tr>
					</thead>
					
					<tbody>
						<tr class="">
							<th class="" >Nombre</th>
							<th class="">Empresa</th>
							<th class="">Teléfono</th>
							<th class="">Mail</th>
						</tr>
						
						<tr class="">
							<td class=""><%=nombre%></td>
							<td class=""><%=empresa%></td>
							<td class=""><%=telefono%></td>
							<td class=""><%=mail%> </td>
						</tr>
					</tbody>
					
				</table>
			</div>
		</div>
	</div>
	
	<br/>
	
	<div class="container">
        <div class="row">      
			
			<div style="border: 1px solid gray; border-radius: 10px; font-size:70%;" class="col-lg-12">
				<table class="table table-sm table-responsive">

					<thead class="thead-default">
						<tr class="">
							<th colspan="14" class="celda-centro" ><h2>Productos Agregados a Cotización</h2></th>
						</tr>
					</thead>
					<tbody>
						<tr class="">
							<th>
								Partida
							</th>
							<th>
								Cantidad
							</th>
							<th>
								Foto
							</th>
							<th class="">
								Producto
							</th>
							<th class="">
								Modelo
							</th>
							<th class="">
								Color/grano
							</th>
							<th>
								Medida
							</th>
							<th>
								Unidad
							</th>
							<th>
								Precio Unitario Lista USD
							</th>
							<th>
								Precio Unitario Lista MXN
							</th>
							<th>
								Descuento (%)
							</th>
							<th>
								Precio Unitario con Descuento
							</th>
							<th>
								Precio por # piezas
							</th>
							<th>
								Tiempo de entrega (días)
							</th>
						</tr>
						
						<% 
						var cont = 0, suma_bruta = 0, IVA=0, total_neto = 0;
						prod_agregados.forEach(function(producto2){	
						cont ++;
						suma_bruta = suma_bruta + parseFloat(producto2.precio_cantidad);
						var dir = 'http://www.ail.com.mx/imgprod/'+producto2.id_db+'-'+producto2.modelo+'.jpg';
						//	var dir = '/img/logoleo.png';
						%>
							<tr>
								<td>
								<%= cont %>
								</td>
								<td>
								<%= producto2.cantidad%>
								</td>
								<td>
									<img src="<%=dir%>" style="max-height:50px;" >
								</td>
								<td>
									<%=producto2.nombre%>
								</td>
								<td>
									<%=producto2.modelo%>
								</td>
								<td>
									<%=producto2.color_grano%>
								</td>
								<td>
									<%= producto2.presentacion_medida %>
								</td>
								<td>
									<%= producto2.unidad_medida %>
								</td>
								<td>
									<%= producto2.precio_lista_unidad_usd %>
								</td>
								<td>
									<%= producto2.precio_lista_unidad_mxn %>
								</td>
								<td>
									<%= producto2.descuento %> 
								</td>
								<td>
									$<%= producto2.precio_descuento %>
								</td>
								<td>
								   $<%= producto2.precio_cantidad %> 
								</td>
								<td>
								    <%= producto2.tiempo_entrega %>
								</td>
							</tr>		
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	
			<br/>
			<div class="container">
				<div class="row">
					<div class="offset-lg-6 col-lg-6 offset-md-6 col-md-6 offset-sm-0 col-sm-12 offset-xs-0 col-xs-12" style="border: 1px solid gray; border-radius: 10px;">
						<%IVA = parseFloat(suma_bruta*0.16);
						 total_neto = (suma_bruta + IVA).toFixed(3);%>
						<table class="table table-striped">
							<tbody>
								<tr>
									<th>Total Bruto</th>
									<td>$<%= suma_bruta %></td>
								</tr>
								
								<tr>
									<th>IVA (16%)</th>
									<td>$<%=(IVA).toFixed(3)%></td>
								</tr>
								<tr>
									<th>Total Neto</th>
									<td>$<%=total_neto%></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<br/>
			
	<div class="container centro" style="margin:0 auto;">
        <div class="row">
			<div style="border: 1px solid gray; border-radius: 10px; margin:0 auto; padding: 0 px;" class="col-lg-12">
				<table class="table" style="margin:0 auto;">
						<thead class="thead-default">
							<tr>
								<th colspan="6" class="celda-centro">
									<h2>Vendedor</h2>
								</th>
							</tr>
						</thead>	
							<tr class="">
								<th class="">
									Vendedor
								</th>
								<th class="">
									# vendedor
								</th>
								<th class="">
									# cotización
								</th>
								<th class="">
									Extension
								</th>
								<th class="">
									Email de vendedor
								</th>
								<th class="">
									 Tiempo de entrega (días)
								</th>
							</tr>
					<tbody>	
						<tr class="">
							<td class="">
								<%=vendedor%>
							</td>
							<td class="">
								<%=num_vendedor%>	
							</td>
							<td class="">
								<%=num_cot%>
							</td>
							<td class="">
								<%=extension%>	
							</td>
							<td class="">
								<%=email_vendedor%>
							</td>
							<td class="">
								<%=tiempo_entrega%> 
							</td>
						</tr>
					</tbody>
				</table>
			</div>	
		</div>
	</div>
       

</body>
</html>

<% include ../partials/3m_refs.ejs %>

